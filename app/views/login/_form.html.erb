<%= form_tag "/login" do %>
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
	<% end %>
		<div class="field">
			用户名：<%= text_field_tag :username	%>
		</div>
		<div class="field">
			密&nbsp;&nbsp;码：<%= password_field_tag :password %>
		</div>
		<div class="action">
			<%= submit_tag '登录' %>
		</div>
<% end %>
