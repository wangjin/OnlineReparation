<!DOCTYPE html>
<html>
	<head>
		<title>Online Reparation</title>
		<%= stylesheet_link_tag "application" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<% if session[:user] %>
		<div class="headerlogged">
			<div class="container">
				<span class="blank">
					&nbsp;
				</span>
					<span class="titlefont"><%= link_to 'Online Reparation', :root %></span>
				<span class="loginfo">
					<%= session[:user].realname %>
				</span>
				<span class="logbtn"><a class="registerbtn" href="/logout">注&nbsp;销</a></span>
			</div>
		</div>
		<% else %>
		<div class="headerlogout">
			<div class="container">
				<span class="blank">
					&nbsp;
				</span>
					<span class="titlefont"><%= link_to 'Online Reparation', :root %></span>
				<span class="blank">
					&nbsp;
				</span>
				<span class="blank">
					&nbsp;
				</span>
				<span class="logbtn">
					<%= link_to '注 册', {:controller => 'register',:action => 'toregister'}, :class => 'registerbtn'%>
					<%= link_to '登 录', {:controller => 'login',:action => 'tologin'}, :class => 'loginbtn'%>
				</span>
			</div>
		</div>
		<% end %>
		<%= yield %>

	</body>
</html>
