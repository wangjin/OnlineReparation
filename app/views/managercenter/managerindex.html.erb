<%= javascript_include_tag "messages" %>
<div class="site clearfix">
	<div id="site-container" class="context-loader-container" data-pjax-container="">

		<div class="pagehead">
			<div class="container">
				<ul class="tabs">
					<li>
						<%= link_to '报修处理',{:action => 'managerindex'}, :class => 'js-selected-navigation-item  selected' %>
					</li>
					<% if session[:user].usertype.to_i < 2 %>
					<li>
						<%= link_to '信息管理',{:action => 'messages'},:class => 'js-selected-navigation-item' %>
					</li>
					<li>
						<%= link_to '信息统计',{:action => 'informations'},:class => 'js-selected-navigation-item' %>
					</li>
					<% end %>
					<% if session[:user].usertype.to_i == 0 %>
					<li>
						<%= link_to '材料管理',{:action => 'materials'},:class => 'js-selected-navigation-item' %>
					</li>
					<li>
						<%= link_to '维修人员管理',{:action => 'accendants'},:class => 'js-selected-navigation-item' %>
					</li>
					<% end %>
				</ul>
				<div data-pjax="">
					<div class="tabnav">
						<ul class="tabnav-tabs">
							<li>
								<a href="javascript:showunprocessdiv();" class="js-selected-navigation-item tabnav-tab">未处理</a>
							</li>
							<li>
								<a href="javascript:showprocesseddiv();" class="js-selected-navigation-item tabnav-tab">已处理</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div id="js-repo-pjax-container" class="container context-loader-container" data-pjax-container="">

			<div id="slider">
				<br />
				<div class="frames" style="min-height: 270px;">
					<div class="frame">

						<div class="bubble tree-browser-wrapper" id="unprocessdiv">
							<table class="tree-browser css-truncate" cellpadding="0" cellspacing="0">
								<tbody class="tree-entries js-deferred-content" style="text-align: center">
									<tr>
										<td class="content"style="width: 100px">新闻名称</td>
										<td class="age"style="width: 150px">新闻内容</td>
										<td class="age"style="width: 150px">发布者</td>
										<td class="age">操作</td>
									</tr>
									<% @unprocess.each do |unprocess| %>
									<tr id="<%= unprocess.id%>_unprocess_tr">
										<td class="content" id="<%= unprocess.id%>_unprocess_title"><%= unprocess.unprocess_title%></td>
										<td class="age" id="<%= unprocess.id%>_unprocess_content"><%= unprocess.unprocess_content%></td>
										<td class="age"><%= unprocess.user.realname%></td>
										<td><a href="javascript:editunprocess(<%= unprocess.id%>)">编辑</a>&nbsp;<a href="javascript:deleteunprocess(<%= unprocess.id%>);">删除</a></td>
									</tr>
									<% end %>

									<tr>
										<td colspan="5"><%= paginate @unprocess, :window => 2 %></td>

									</tr>
								</tbody>

							</table>
						</div>

						<div class="bubble tree-browser-wrapper" id="processeddiv" style="display: none;">

							<div class="commit commit-tease js-details-container">
								<p>
									<a href="javascript:shownewdiv('announcement');">添加公告</a>
								</p>
							</div>
							<table class="tree-browser css-truncate" cellpadding="0" cellspacing="0">
								<tbody class="tree-entries js-deferred-content" style="text-align: center">
									<tr>
										<td class="content"style="width: 100px">公告名称</td>
										<td class="age"style="width: 150px">公告内容</td>
										<td class="age"style="width: 150px">发布者</td>
										<td class="age">操作</td>
									</tr>
									<% @announcements.each do |announcement| %>
									<tr id="<%= announcement.id%>_announcement_tr">
										<td class="content" id="<%= announcement.id%>_announcement_title"><%= announcement.announcement_title%></td>
										<td class="age"id="<%= announcement.id%>_announcement_content"><%= announcement.announcement_content%></td>
										<td class="age"><%= announcement.user.realname%></td>
										<td><a href="javascript:editannouncement(<%= announcement.id%>)">编辑</a>&nbsp;<a href="javascript:deleteannouncement(<%= announcement.id%>);">删除</a></td>
									</tr>
									<% end %>

									<tr>
										<td colspan="5"><%= paginate @announcements, :window => 2 %></td>

									</tr>
								</tbody>

							</table>
						</div>

					</div>
				</div>

				<br style="clear:both;">

				<br style="clear:both;">

				<div id="js-frame-loading-template" class="frame frame-loading large-loading-area" style="display:none;">
					<img class="js-frame-loading-spinner" src="https://a248.e.akamai.net/assets.github.com/images/spinners/octocat-spinner-128.gif?1347543527" height="64" width="64">
				</div>

			</div>

		</div>
		<!-- footer -->
		<div id="footer">
			<div class="container clearfix">
				<hr class="footer-divider">

				<p class="right">
					© 2013 <span title="0.04586s from fe2.rs.github.com">WangJin</span>&nbsp;All rights reserved.
				</p>
				<a class="left" href="https://github.com/"> <span class="mega-octicon octicon-mark-github"></span> </a>
				<ul id="legal">
					<li>
						<a href="https://github.com/site/terms">Terms of Service</a>
					</li>
					<li>
						<a href="https://github.com/site/privacy">Privacy</a>
					</li>
					<li>
						<a href="https://github.com/security">Security</a>
					</li>
				</ul>
			</div><!-- /.container -->
		</div><!-- /.#footer -->

		<div class="fullscreen-overlay js-fullscreen-overlay" id="fullscreen_overlay">
			<div class="fullscreen-container js-fullscreen-container">
				<div class="textarea-wrap">
					<textarea name="fullscreen-contents" id="fullscreen-contents" class="js-fullscreen-contents" placeholder="" data-suggester="fullscreen_suggester"></textarea>
				</div>
			</div>
			<div class="fullscreen-sidebar">
				<a href="https://github.com/explore#" class="exit-fullscreen js-exit-fullscreen tooltipped leftwards" original-title="Exit Zen Mode"> <span class="mega-octicon octicon-screen-normal"></span> </a>
				<a href="https://github.com/explore#" class="theme-switcher js-theme-switcher tooltipped leftwards" original-title="Switch themes"> <span class="octicon octicon-color-mode"></span> </a>
			</div>
		</div>
	</div>
</div>

