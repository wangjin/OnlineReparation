<div class="site clearfix">
	<div id="site-container" class="context-loader-container" data-pjax-container="">

		<div class="pagehead">
			<div class="container">
				<ul class="tabs">
					<li>
						<%= link_to '报修处理',{:action => 'managerindex'}, :class => 'js-selected-navigation-item' %>
					</li>
					<li>
						<%= link_to '新闻公告管理',{:action => 'messages'},:class => 'js-selected-navigation-item' %>
					</li>
					<li>
						<%= link_to '投诉建议管理',{:action => 'informations'},:class => 'js-selected-navigation-item selected' %>
					</li>
					<% if session[:user].usertype.to_i == 0 %>
					<li>
						<%= link_to '材料管理',{:action => 'materials'},:class => 'js-selected-navigation-item' %>
					</li>
					<li>
						<%= link_to '维修人员管理',{:action => 'accendants'},:class => 'js-selected-navigation-item' %>
					</li>
					<% end %>
					<% if session[:user].usertype.to_i == 2 %>
					<li>
						<%= link_to '我的任务',{:action => 'mywork'},:class => 'js-selected-navigation-item selected' %>
					</li>
					<% end %>
				</ul>
				<br/>
			</div>
		</div><!-- /.pagehead -->
		<div id="js-repo-pjax-container" class="container context-loader-container" data-pjax-container="">

			<div id="slider">
				<br>
				<div class="frames" style="min-height: 270px;">
					<div class="frame">

						<div class="bubble tree-browser-wrapper" id="reparation_information">
							<table class="tree-browser css-truncate" cellpadding="0" cellspacing="0">
								<tbody class="tree-entries js-deferred-content" style="text-align: center">
									<tr>
										<td class="content" style="width: 100px">姓名</td>
										<td class="age" style="width: 150px">电子邮件</td>
										<td class="age" style="width: 50px">投诉建议类别</td>
										<td class="age" style="width: 250px">投诉建议内容</td>
									</tr>

									<tr>
										<td colspan="4"></td>
									</tr>
									<% @suggestions.each do |suggestion|%>
									<tr>
										<td><%= suggestion.realname%></td><td><%= suggestion.email%></td><td><% if suggestion.suggestion_type == 1%>报修服务相关<% end %><% if suggestion.suggestion_type == 2 %>网站相关<% end %><% if suggestion.suggestion_type == 3%>其他<% end %></td>
										<td><%= suggestion.suggestion_desc%></td>
									</tr>
									<% end %>
<tr>
										<td colspan="4"><%= paginate @suggestions, :window => 2 %></td>

									</tr>
								</tbody>

							</table>
						</div>

					</div>
				</div>

				<br style="clear:both;">

				<br style="clear:both;">

				<div id="js-frame-loading-template" class="frame frame-loading large-loading-area" style="display:none;">
					<img class="js-frame-loading-spinner" src="https://a248.e.akamai.net/assets.github.com/images/spinners/octocat-spinner-128.gif?1347543527" height="64" width="64">
				</div>

			</div>

		</div>
		<div class="modal-backdrop"></div>
	</div>
</div>