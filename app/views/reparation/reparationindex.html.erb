<%= javascript_include_tag "select" %>
<%= javascript_include_tag "common" %>
<% if session[:user] %>
<div class="header header-logged-in true">
	<div class="container clearfix">

		<%= link_to '高校后勤报修服务平台', :root, :id => 'loggedlogo' %>

		<div class="divider-vertical"></div>

		<ul id="user-links">
			<li>
				<a href="###" class="name">欢迎：<%= session[:user].realname %></a>
			</li>
			<% if session[:user].usertype.to_i < 3 %>
			<li>
				<%= link_to '管理中心', {:controller => 'managercenter', :action => 'managerindex'}, :class => 'name'%>
			</li>
			<% end %>
			<% if session[:user].usertype.to_i == 3 %>
			<li>
				<%= link_to '申请报修', {:controller => 'reparation', :action => 'reparationindex'}, :class => 'tooltipped downwards'%>
				
			</li>
			<% end %>
			<li>
				<a href="/membercenter/memberindex" id="account_settings" class="tooltipped downwards" original-title="Account settings "> <span class="octicon octicon-tools"></span> </a>
			</li>
			<li>
				<div class="tabnav-right">
							<div class="tabnav-widget" id="logout">
								<a href="/logout" class="button minibutton primary bigger js-new-issue-button">登&nbsp;出</a>
							</div>
						</div>
			</li>

		</ul>

		<div class="js-new-dropdown-contents hidden">
			<ul class="dropdown-menu">
				<li>
					<a href="/new"><span class="octicon octicon-repo-create"></span> New repository</a>
				</li>
				<li>
					<a href="https://github.com/wangjin252/OnlineReparation/issues/new"><span class="octicon octicon-issue-opened"></span> New issue</a>
				</li>
				<li></li>
				<li>
					<a href="/organizations/new"><span class="octicon octicon-list-unordered"></span> New organization</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<br />

<% else %>
<div class="header header-logged-out">
	<div class="container clearfix">
		<%= link_to '高校后勤报修服务平台', :root,:id => 'logo' %>
		<div class="header-actions">
			<%= link_to '注 册', {:controller => 'register',:action => 'toregister'}, :class => 'button primary' %>
			<%= link_to '登 录', {:controller => 'login',:action => 'tologin'}, :class => 'button'%>
		</div>
	</div>
</div>

<% end %>
<div class="site clearfix">
	<div id="site-container" class="context-loader-container" data-pjax-container="">

		<div class="pagehead">
			<div class="container">
				<ul class="tabs">
					<li>
						<%= link_to '新闻公告',{:controller => 'welcome', :action => 'index'}, :class => 'js-selected-navigation-item' %>
					</li>
					<li>
						<%= link_to '最近报修',{:controller => 'welcome', :action => 'reparations'},:class => 'js-selected-navigation-item' %>
					</li>
					<li>
						<%= link_to '物品公示',{:controller => 'welcome', :action => 'materials'},:class => 'js-selected-navigation-item' %>
					</li>
					<li>
						<%= link_to '投诉建议',{:controller => 'welcome', :action => 'suggestions'},:class => 'js-selected-navigation-item' %>
					</li>
				</ul>
				<br/>
			</div>
		</div><!-- /.pagehead -->






		<div id="js-repo-pjax-container" class="container context-loader-container" data-pjax-container="">

			<!-- tree commit key: views10/v8/tree:v21:9074d5d4514048221a6bb1018f7955c9 -->

			<div id="slider">
				<div class="frame-meta">
					<div class="breadcrumb">
						<span class="bold"><span><a href="###" class="js-slide-to" data-branch="master" data-direction="back" itemscope="url"><span itemprop="title">申请报修</span></a></span></span>
					</div>
					<br />

					<a href="/wangjin252/OnlineReparation/find/master" class="js-slide-to" data-hotkey="t" style="display:none">Show File Finder</a>

				</div><!-- ./.frame-meta -->

				<div class="frames" style="min-height: 656px;">
					<div class="frame">
						<div id="readme" class="clearfix announce instapaper_body md">
							<span class="name">填写报修信息</span>
							<article class="markdown-body entry-content">
								<%= render :partial => 'form' %>
							</article>
						</div>
					</div>
				</div>
				<br style="clear:both;">

				<br style="clear:both;">

				<div id="js-frame-loading-template" class="frame frame-loading large-loading-area" style="display:none;">
					<img class="js-frame-loading-spinner" src="https://a248.e.akamai.net/assets.github.com/images/spinners/octocat-spinner-128.gif?1347543527" height="64" width="64">
				</div>

			</div>

		</div>

		<!-- footer -->
<div id="footer">
	<div class="container clearfix">
		<hr class="footer-divider">

		<p class="right">
			© 2013 <span>淮海工学院 王金</span>&nbsp;版权所有
		</p>
		<a class="left"> <span class="mega-octicon octicon-mark-github"></span> </a>
	</div><!-- /.container -->
</div><!-- /.#footer -->

