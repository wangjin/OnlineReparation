<div class="site clearfix">
	<div id="site-container" class="context-loader-container" data-pjax-container="">

		<div class="pagehead">
			<div class="container">
				<ul class="tabs">
					<li>
						<%= link_to '新闻公告',{:action => 'index'}, :class => 'js-selected-navigation-item' %>
					</li>
					<li>
						<%= link_to '最近报修',{:action => 'reparations'},:class => 'js-selected-navigation-item' %>
					</li>
					<li>
						<%= link_to '物品公示',{:action => 'materials'},:class => 'js-selected-navigation-item selected' %>
					</li>
					<li>
						<%= link_to '投诉建议',{:action => 'suggestions'},:class => 'js-selected-navigation-item' %>
					</li>
				</ul>
				<br/>
			</div>
		</div><!-- /.pagehead -->

		<div class="container">
			<div class="columns explorecols explore">
				<div class="main">
					<div id="trending-repositories" class="trending-repositories context-loader-container">
						<div id="js-repo-pjax-container" class="container context-loader-container" data-pjax-container="">
							<div id="slider">
								<div class="frames" style="min-height: 270px;">
									<div class="frame">
										<div class="bubble tree-browser-wrapper" id="material">
											<table class="tree-browser css-truncate" cellpadding="0" cellspacing="0">
												<tbody class="tree-entries js-deferred-content" style="text-align: center">
													<tr>
														<td class="content"style="width: 80px">名称</td>
														<td class="age"style="width: 100px">所属类别</td>
														<td class="age"style="width: 80px">单价</td>
													</tr>
													<% @materials.each do |material| %>
													<tr id="<%= material.id%>_material_tr">
														<td class="content"><%= material.materialname %></td>
														<td class="age"><%= material.problem.problemType%></td>
														<td class="age"><%= material.materialprice%></td>
													</tr>
													<% end %>
													<tr>
														<td colspan="3"><%= paginate @materials, :window => 2 %></td>

													</tr>
												</tbody>

											</table>
										</div>
									</div>
								</div>

								<br style="clear:both;">

								<br style="clear:both;">

							</div>

						</div>

					</div>
				</div><!-- /.columns.explorecols -->
			</div>

		</div>
		<div class="modal-backdrop"></div>
	</div>
</div><!-- end of wrapper - hack for sticky footer -->

<!-- footer -->
<div id="footer">
	<div class="container clearfix">
		<hr class="footer-divider">

		<p class="right">
			© 2013 <span title="0.04586s from fe2.rs.github.com">WangJin</span>&nbsp;All rights reserved.
		</p>
		<a class="left" > <span class="mega-octicon octicon-mark-github"></span> </a>
	</div><!-- /.container -->
</div><!-- /.#footer -->

<div class="fullscreen-overlay js-fullscreen-overlay" id="fullscreen_overlay">
	<div class="fullscreen-container js-fullscreen-container">
		<div class="textarea-wrap">
			<textarea name="fullscreen-contents" id="fullscreen-contents" class="js-fullscreen-contents" placeholder="" data-suggester="fullscreen_suggester"></textarea>
		</div>
	</div>
	<div class="fullscreen-sidebar">
		<a href="https://github.com/explore#" class="exit-fullscreen js-exit-fullscreen tooltipped leftwards" original-title="Exit Zen Mode"> <span class="mega-octicon octicon-screen-normal"></span> </a>
		<a href="https://github.com/explore#" class="theme-switcher js-theme-switcher tooltipped leftwards" original-title="Switch themes"> <span class="octicon octicon-color-mode"></span> </a>
	</div>
</div>